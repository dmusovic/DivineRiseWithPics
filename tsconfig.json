{
  "compilerOptions": {
    "jsx": "react",
    "types": ["react-nativescript", "node"],
    "module": "esnext",
    "target": "ES2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "lib": ["ESNext", "dom"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true  // Enable synthetic default imports
  },
  "include": [
    "./src/**/*",
    "nativescript-jsx.d.ts"
  ],
  "exclude": ["node_modules", "platforms"]
}